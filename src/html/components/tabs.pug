mixin tabs({ extraClass = '', activeTab = 'goods', tabs = [] })
  .tabs(class=extraClass)
    .tabs__head
      .tabs__list
        each tab in tabs
          button.tabs__tab(class={ 'tabs__tab--active': tab.path === activeTab }, data-tab-path=tab.path)
            = tab.label
            if tab.count
              span.tabs__tab-count #{tab.count}
    .tabs__contents
      each tab in tabs
        .tabs__content(class={ 'tabs__content--active': tab.path === activeTab }, data-tab-target=tab.path)
          = tab.content


